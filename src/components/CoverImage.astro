---
// Composant pour afficher l'image de couverture avec la base URL dynamique
const baseUrl = import.meta.env.BASE_URL;
const imageSrc = `${baseUrl}illustrations/cover.png`;
---

<img 
  src={imageSrc} 
  alt="Couverture" 
  style="width: 100%; height: 100%; object-fit: cover; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);" 
/> 